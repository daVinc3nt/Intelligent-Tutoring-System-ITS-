# ========================================
# Node & Next.js standard .gitignore
# ========================================

# Node modules
node_modules/

# Build output
.next/
out/
dist/
build/

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# System files
.DS_Store
Thumbs.db

# IDE / Editor folders
.vscode/
.idea/
*.swp

# Optional: OS or editor backup files
*.bak
*.tmp

# Package lock files (if using another package manager)
# Uncomment if you want to ignore them
# package-lock.json
# yarn.lock
# pnpm-lock.yaml

# TypeScript build info
*.tsbuildinfo

# Coverage reports
coverage/

# Misc
*.log
